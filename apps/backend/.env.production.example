# ChronusDev Backend - Production Environment Variables
# Copy this file to .env and fill in the values

# Server
PORT=3001
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@db-host:5432/chronusdev?schema=public"

# Authentication
JWT_SECRET="GENERATE_64_CHAR_RANDOM_STRING_HERE"

# URLs (CRITICAL - Update for your domain)
FRONTEND_URL="https://chronusdev.assistai.work"
CRM_API_URL="https://chronuscrm.assistai.work/api"
CRM_FRONTEND_URL="https://chronuscrm.assistai.work"

# CRM Sync Key (must match CRM backend)
CRM_SYNC_KEY="GENERATE_32_CHAR_RANDOM_STRING_HERE"

# Google OAuth (Calendar Integration)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://chronusdev.assistai.work/api/auth/google/callback"
