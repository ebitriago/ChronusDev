# ChronusCRM Backend - Production Environment Variables
# Copy this file to .env and fill in the values

# Server
PORT=3002
NODE_ENV=production

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@db-host:5432/chronuscrm?schema=public"

# Authentication
JWT_SECRET="GENERATE_64_CHAR_RANDOM_STRING_HERE"

# URLs (CRITICAL - Update for your domain)
# URLs (CRITICAL - Update for your domain)
API_PUBLIC_URL="https://api-chronuscrm.assistai.work"
CRM_FRONTEND_URL="https://chronuscrm.assistai.work"
CHRONUSDEV_API_URL="https://api-chronusdev.assistai.work"
CHRONUSDEV_FRONTEND_URL="https://chronusdev.assistai.work"

# For WhatsApp webhook registration (public URL)
CRM_PUBLIC_URL="https://chronuscrm.assistai.work/api"

# CRM Sync Key (must match ChronusDev backend)
CRM_SYNC_KEY="SAME_KEY_AS_CHRONUSDEV_BACKEND"

# Google OAuth (Calendar Integration)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://chronuscrm.assistai.work/api/auth/google/callback"

# AssistAI Integration (optional)
ASSISTAI_API_URL="https://api.assistai.work"
ASSISTAI_REDIRECT_URI="https://chronuscrm.assistai.work/api/auth/assistai/callback"
# ASSISTAI_API_TOKEN="your-assistai-token"
# ASSISTAI_TENANT_DOMAIN="your-tenant.assistai.work"
# ASSISTAI_ORG_CODE="your-org-code"

# Stripe (optional - for payments)
